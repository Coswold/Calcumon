      <a href="/gameplay"><img class="play" src="../images/create-game-btn.png" alt=""></a>

      <!-- Join Game Button -->
      <a href="/gameplay"><img class="play" src="../images/join-game-btn.png" alt=""></a>
  </div>

  <div id = "calcumon">
  </div>

  <!-- Logout Link-->
  <h3 style="text-transform:uppercase">{{currentUser.username}}</h3>
