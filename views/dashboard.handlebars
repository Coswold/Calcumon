  <a class="logout-link" href="/logout"> LOGOUT</a>

</div>

<script>
  let calcumon = `{{currentUser.monster}}`
  console.log(calcumon)
  let path = ""
  let bubble = ""
  if (calcumon == "monster1") {
    path = "../images/Calcumons/monster-one.png"
    bubble = "one"
  } else {
    path = "../images/Calcumons/monster-two.png"
    bubble = "two"
  }

  // add image element
  document.getElementById('calcumon').innerHTML = `<img class = "monster chat-bubble1" src="../images/chatbubbles/${bubble}.png" alt="calcumon">`
  document.getElementById('calcumon').innerHTML += `<img class = "monster" src='${path}' alt="calcumon">`
  document.getElementById('calcumon').innerHTML += `<img class = "monster chat-bubble2" src="../images/chatbubbles/${bubble}2.png" alt="calcumon">`
</script>
